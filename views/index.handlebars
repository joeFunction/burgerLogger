<h1>Menu</h1>

<div class="row">
  <div class="col-6">
    <h2>Open Table area...</h2>

    <ul>
      {{#each burger}}
      {{#unless devoured}}
      <li>
        {{burger_name}}
        <button class="eat" data-id="{{id}}">Checkout</button>
      </li>

      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-6">
    <h2>Closed Table area...</h2>

    <ul>
      {{#each burger}}
      {{#if devoured}}
      <li>
        {{burger_name}}
      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Table Number:</label>
    <input type="text" id="burger" name="name">
  </div>
  <button id="add">Add</button>
</form>

<div class="card text-white bg-danger mb-3" style="max-width: 18rem;">
  <div class="card-header">Table ID goes here</div>
  <div class="card-body">
    <h5 class="card-title">Burgers</h5><button id="000">Add</button>
    <h5 class="card-title">Drinks</h5><button id="000">Add</button>
  </div>

  <button id="000">Checkout</button>