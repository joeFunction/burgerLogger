<h1>Cats!</h1>

<div class="row">
  <div class="col-6">
    <h2>Cats that are not sleepy!</h2>

    <ul>
      {{#each burger}}
      {{#unless devoured}}
      <li>
        {{burger_name}}

        <button class="eat" data-id="{{id}}">EAT!</button>
      </li>

      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-6">
  <h2>Cats that are sleepy!</h2>

  <ul>
    {{#each burger}}
    {{#if devoured}}
    <li>
      {{burger_name}}


    </li>
    {{/if}}
    {{/each}}
  </ul>
</div>
</div>
<h2>Add a Cat</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Cat Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button id="add">Add Burger</button>
</form>