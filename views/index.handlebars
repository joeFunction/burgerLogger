<h1>Burgers!</h1>

<div class="row">
  <div class="col-6">
    <h2>Your Plate...</h2>

    <ul>
      {{#each burger}}
      {{#unless devoured}}
      <li>
        {{burger_name}}

        <button class="eat" data-id="{{id}}">EAT</button>
      </li>

      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-6">
  <h2>Empty Plate...</h2>

  <ul>
    {{#each burger}}
    {{#if devoured}}
    <li>
      {{burger_name}}


    </li>
    {{/if}}
    {{/each}}
  </ul>
</div>
</div>
<h2>Add a Burger...</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Cat Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button id="add">Add</button>
</form>